<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ==================== -->
    <!-- ALMACENAMIENTO INTERNO -->
    <!-- ==================== -->

    <!-- Directorio principal de archivos internos -->
    <files-path name="internal_files" path="." />

    <!-- Directorio personalizado para archivos de la app -->
    <files-path name="my_custom_folder" path="my_files/" />

    <!-- Directorio de cache interno -->
    <cache-path name="internal_cache" path="." />

    <!-- Directorio para archivos de base de datos -->
    <files-path name="databases" path="databases/" />

    <!-- Directorio para archivos de configuración -->
    <files-path name="shared_prefs" path="shared_prefs/" />

    <!-- Directorio para archivos temporales internos -->
    <cache-path name="temp_files" path="temp/" />

    <!-- Directorio para assets -->
    <files-path name="assets_files" path="assets/" />

    <!-- ==================== -->
    <!-- ALMACENAMIENTO EXTERNO PRIVADO -->
    <!-- ==================== -->

    <!-- Directorio principal de archivos externos privados -->
    <external-files-path name="external_private_files" path="." />

    <!-- Directorio de cache externo privado -->
    <external-cache-path name="external_private_cache" path="." />

    <!-- Directorio para imágenes (USADO POR LA CÁMARA) -->
    <external-files-path name="my_images" path="Pictures/" />

    <!-- Directorios específicos para Android 10+ (Scoped Storage) -->
    <external-files-path name="external_documents" path="Documents/" />
    <external-files-path name="external_audio" path="Music/" />
    <external-files-path name="external_videos" path="Movies/" />
    <external-files-path name="external_downloads" path="Download/" />

    <!-- Directorio para archivos temporales externos -->
    <external-cache-path name="external_temp" path="temp/" />

    <!-- ==================== -->
    <!-- ALMACENAMIENTO EXTERNO PÚBLICO -->
    <!-- ==================== -->

    <!-- Directorios públicos standard -->
    <external-path name="downloads" path="Download/" />
    <external-path name="dcim" path="DCIM/" />
    <external-path name="pictures" path="Pictures/" />
    <external-path name="movies" path="Movies/" />
    <external-path name="music" path="Music/" />
    <external-path name="documents" path="Documents/" />

    <!-- Acceso general a medios -->
    <external-path name="media" path="." />

    <!-- Directorio público específico de la app -->
    <external-path name="app_public_files" path="Android/data/${applicationId}/files/" />

    <!-- ==================== -->
    <!-- COMPATIBILIDAD AVANZADA -->
    <!-- ==================== -->

    <!-- Para acceso a sistemas de archivos raíz (tarjetas SD) -->
    <root-path name="root" path="." />

</paths>