<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cliente_gradient_bg"
    android:fillViewport="true"
    tools:context=".activities.ClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:paddingVertical="20dp">

            <!-- Avatar del cliente -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:background="@drawable/circle_client_primary"
                android:padding="20dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="隆Bienvenido!"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando informaci贸n..."
                android:textSize="16sp"
                android:textColor="#E3F2FD"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Tarjeta de opciones principales -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16px">

                <!-- Ver Productos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#F0F9FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btnVerProductos">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:background="@drawable/circle_primary_client"
                            android:padding="12dp"
                            app:tint="@android:color/white"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ver Productos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Explora nuestro cat谩logo completo"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#3B82F6" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Ver Carrito -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#F0FDF4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btnVerCarrito">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_add"
                            android:background="@drawable/circle_success_client"
                            android:padding="12dp"
                            app:tint="@android:color/white"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ver Carrito"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Revisa y gestiona tus compras"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#10B981" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Mis Pedidos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FFFBEB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btnMisPedidos">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_send"
                            android:background="@drawable/circle_warning_client"
                            android:padding="12dp"
                            app:tint="@android:color/white"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mis Pedidos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Historial y estado de tus pedidos"
                                android:textSize="13sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#F59E0B" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bot贸n de cerrar sesi贸n -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cerrar Sesi贸n"
            android:textSize="16sp"
            android:textColor="#DC2626"
            android:backgroundTint="@android:color/white"
            app:strokeColor="#DC2626"
            app:strokeWidth="1.5dp"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#DC2626"
            android:paddingVertical="14dp"
            android:layout_marginTop="8dp" />

        <!-- Footer decorativo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disfruta de tu experiencia de compra"
                android:textSize="14sp"
                android:textColor="#E5E7EB"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>