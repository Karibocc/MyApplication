<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#667eea"
    android:fillViewport="true"
    tools:context=".activities.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con icono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:paddingVertical="20dp">

            <!-- Icono decorativo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_lock_lock"
                android:background="#8B5CF6"
                android:padding="16dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel de Administración"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvAdminInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando información..."
                android:textSize="14sp"
                android:textColor="#E3F2FD"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Tarjeta de funcionalidades -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Gestión de Productos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/btnGestionarProductos"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F3F4F6">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:background="#3B82F6"
                        android:padding="8dp"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gestión de Productos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Agregar, editar y eliminar productos"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#9CA3AF" />

                </LinearLayout>

                <!-- Gestión de Usuarios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/btnGestionarUsuarios"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F3F4F6">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:background="#10B981"
                        android:padding="8dp"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gestión de Usuarios"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Administrar usuarios y permisos"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#9CA3AF" />

                </LinearLayout>

                <!-- Ver Reportes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/btnVerReportes"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F3F4F6">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:background="#F59E0B"
                        android:padding="8dp"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ver Reportes"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Estadísticas y análisis del sistema"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#9CA3AF" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cerrar Sesión"
            android:textSize="16sp"
            android:textColor="#DC2626"
            android:background="@android:color/white"
            android:paddingVertical="14dp"
            android:layout_marginTop="8dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Administración v1.0"
            android:textSize="12sp"
            android:textColor="#E5E7EB"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>