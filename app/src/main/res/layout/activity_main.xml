<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#667eea"
        android:gravity="center">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando información..."
            android:textSize="14sp"
            android:textColor="#E3F2FD"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F5F5F5">

        <Button
            android:id="@+id/btnVerProductos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ver Productos"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#3B82F6"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnVerCarrito"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ver Carrito"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#10B981"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnMisPedidos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Mis Pedidos"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F59E0B"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Panel Administrador"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#8B5CF6"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Cerrar Sesión"
            android:textSize="16sp"
            android:textColor="#DC2626"
            android:background="@android:color/white" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>