<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".adapters.CarritoAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/background">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_image"
            android:layout_alignParentStart="true"
            tools:src="@drawable/ic_image_placeholder" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/ivProductImage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Nombre del producto" />

        <!-- Precio unitario -->
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            tools:text="$99.99" />

        <!-- Subtotal del producto -->
        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductPrice"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/textSecondary"
            tools:text="Subtotal: $99.99" />

        <!-- Controles de cantidad -->
        <LinearLayout
            android:id="@+id/layoutCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProductImage"
            android:layout_alignStart="@id/ivProductImage"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Bot칩n menos - 48dp para mejor accesibilidad -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remove"
                android:contentDescription="@string/reducir_cantidad"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:minWidth="36dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp" />

            <!-- Bot칩n m치s - 48dp para mejor accesibilidad -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/aumentar_cantidad"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <!-- Bot칩n eliminar - 48dp para mejor accesibilidad -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/eliminar_producto"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            app:tint="@color/red" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>