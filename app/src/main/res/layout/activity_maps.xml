<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#4A6572">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación y Tiendas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUbicacionActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obteniendo ubicación..."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="8dp"
            android:background="#344955"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnObtenerUbicacion"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Mi Ubicación"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnVerTiendas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Ver Tiendas"
                android:layout_marginStart="4dp"
                android:backgroundTint="#EF6C00"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información de Ubicación"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Marcador azul: Tu ubicación actual\n• Marcador rojo: Nuestras tiendas"
            android:textSize="12sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>

